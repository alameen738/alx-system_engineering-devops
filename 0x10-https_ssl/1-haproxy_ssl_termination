global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

    # Enable SSL
    ssl-default-bind-ciphers <cipher-suites>
    ssl-default-bind-options no-sslv3 no-tlsv10 no-tlsv11
    tune.ssl.default-dh-param 2048

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http_front
    bind *:80
    bind *:443 ssl crt /etc/letsencrypt/live/www.galadimaprint.tech/fullchain.pem
    reqadd X-Forwarded-Proto:\ https

    # Redirect HTTP to HTTPS
    redirect scheme https code 301 if !{ ssl_fc }

    # ACL for www subdomain
    acl is_www hdr(host) -i www.galadimaprint.tech

    # Use backend for www subdomain
    use_backend www_backend if is_www

    # Use default backend for other subdomains
    default_backend default_backend

backend www_backend
    balance roundrobin
    server 428520-web-01 100.26.238.222:80 check
    server 428520-web-02 54.88.243.245:80 check

backend default_backend
    server default_server 127.0.0.1:80

# Custom error files
errorfile 400 /etc/haproxy/errors/400.http
errorfile 403 /etc/haproxy/errors/403.http
errorfile 408 /etc/haproxy/errors/408.http
errorfile 500 /etc/haproxy/errors/500.http
errorfile 502 /etc/haproxy/errors/502.http
errorfile 503 /etc/haproxy/errors/503.http
errorfile 504 /etc/haproxy/errors/504.http
